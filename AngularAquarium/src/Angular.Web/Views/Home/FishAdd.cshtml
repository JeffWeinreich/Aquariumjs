@{
    ViewData["Title"] = "Add Fish";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <video autoplay loop muted poster="screenshot.jpg" id="background">
        <source src="https://static.videezy.com/system/resources/previews/000/003/550/original/fish1.mp4" type="video/mp4" />
    </video>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
            </div>
        </div>
    </div>
</body>
</html>


<div class="row" ng-controller="AquariumController as aqc" ng-cloak>
    
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Fish</h3>
            </div>
            <ol class="list-group">

                <li class="list-group-item clearfix">
                    <div class="col-sm-8">
                    </div>
                </li>

                <li class="list-group-item clearfix" @*ng-init="fish = {}"*@>
                    <div class="col-sm-8">
                        <div>
                            <input type="text" class="form-control" placeholder="Name" ng-model="fish.name" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Type" ng-model="fish.type" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Description" ng-model="fish.description" />
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <button type="button" class="btn btn-primary" ng-click="aqc.Add(fish)">Add your fish!</button>
                    </div>
                </li>
            </ol>
        </div>
    </div>
</div>